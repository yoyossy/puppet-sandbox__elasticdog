description	"IPS package server (<%= name %>)"

start on filesystem
stop on runlevel [!2345]

respawn
respawn limit 10 5

script
	sudo -u ips pkg.depotd --readonly --proxy-base=http://ips.jenkins-ci.org/ips<%= name %> -d  /srv/ips/ips<%= name %> -p <%= port %>
end script
